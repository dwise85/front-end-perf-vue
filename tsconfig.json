{
  "exclude": ["./node_modules/*"],
  "compilerOptions": {
    "outDir": "./dist/src",
    "lib": ["dom", "es5", "es2015", "es2015.promise"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es6",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "@providers": ["./src/providers"],
      "@rendering": ["./src/rendering"],
      "@rutils": ["src/rendering/utils/runtime-utils"],
      "@test-utils": ["src/rendering/utils/test-util"],
      "@dev-utils": ["src/rendering/utils/dev-util"],
      "@rtypes": ["./src/rendering/types"],
      "@components": ["src/rendering/common/components"],
      "@layout": ["src/rendering/common/layout"],
      "@storeTypes": ["src/rendering/common/stores"],
      "@stores/*": ["src/rendering/common/stores/*"]
    }
  }
}
